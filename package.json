{
    "name": "carpet-config-creator",
    "description": "A webapp for configuring Carpet rules",
    "version": "0.1.0",
    "type": "module",
    "license": "GPL-2.0-only",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "prepare": "npm-run-all prepare:*",
        "prepare:light-theme": "smui-theme compile public/theme-light-raw.css -i src/theme",
        "prepare:light-theme-post": "postcss public/theme-light-raw.css --no-map -o public/theme-light.css",
        "prepare:dark-theme": "smui-theme compile public/theme-dark-raw.css -i src/theme/dark",
        "prepare:dark-theme-post": "postcss public/theme-dark-raw.css --no-map -o public/theme-dark.css",
        "format": "prettier --write --plugin-search-dir=. .",
        "deploy": "sh deploy.sh"
    },
    "devDependencies": {
        "@material/button": "^14.0.0",
        "@material/elevation": "^14.0.0",
        "@material/typography": "^14.0.0",
        "@smui-extra/autocomplete": "^6.0.0",
        "@smui/button": "^6.0.0",
        "@smui/circular-progress": "^6.0.0",
        "@smui/dialog": "^6.0.0",
        "@smui/fab": "^6.0.0",
        "@smui/form-field": "^6.0.0",
        "@smui/icon-button": "^6.0.0",
        "@smui/list": "^6.0.0",
        "@smui/menu": "^6.0.0",
        "@smui/paper": "^6.0.0",
        "@smui/select": "^6.0.0",
        "@smui/switch": "^6.0.0",
        "@smui/textfield": "^6.0.0",
        "@smui/top-app-bar": "^6.0.0",
        "@sveltejs/vite-plugin-svelte": "^1.0.1",
        "@tsconfig/svelte": "^3.0.0",
        "autoprefixer": "^10.4.8",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^10.0.0",
        "postcss-pxtorem": "^6.0.0",
        "prettier": "^2.7.1",
        "prettier-plugin-svelte": "^2.7.0",
        "sass": "^1.54.2",
        "smui-theme": "^6.0.0",
        "svelte": "^3.49.0",
        "svelte-check": "^2.8.0",
        "svelte-preprocess": "^4.10.7",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4",
        "vite": "^3.0.0"
    },
    "dependencies": {
        "@fontsource/jetbrains-mono": "^4.5.9",
        "@fontsource/roboto": "^4.5.7",
        "material-icons": "^1.11.8",
        "simple-icons": "^7.7.0"
    }
}
